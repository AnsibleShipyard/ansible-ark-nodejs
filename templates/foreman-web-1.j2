# foreman-web-1 init file
# Generated by Ansible for {{ansible_fqdn}}

start on starting foreman-web
stop  on stopping foreman-web
respawn

env NODE_ENV="{{ark_nodejs_mode}}"
env PORT="{{ark_nodejs_port}}"
env PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games"
env FOREMAN_WORKER_NAME="web.1"


chdir {{ark_nodejs_install_loc}}/{{ark_nodejs_app_name}}
setuid root
setgid root

exec npm start >> /var/log/foreman/web-1.log 2>&1
